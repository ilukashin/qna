$('#answer-<%= @answer.id %> .errors').html('<%= render 'shared/errors', resource: @answer %>');
<% unless @answer.errors.present? %>
    $('#answer-<%= @answer.id %>').html('<%= j render @answer %> ');

    <% if @answer.files.attached? %>
      $('#answer-<%= @answer.id %> .answer-files').html(`
        <% @answer.files.each do |file| %>
            <%= j render 'attachments/file', file: file %>
        <% end %>
      `);
    <% end %>

<% end %>
